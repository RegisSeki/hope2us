<div id="confirmation-body" class="page">
  <h1>Seja bem vindo Admin :)</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      Lista de doações:
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Item</th>
          <th>Quantidade</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @donations.each do |donation| %>
        <tr>
          <th><%= donation.id %></th>
          <td><%= donation.item.name %></td>
          <td><%= donation.amount %></td>
          <td><%= t("donation_status.#{donation.status}")%></td>
          <% if donation.image? %>
            <td>
              <%= link_to 'Ver comprovante',
              admin_donation_path(donation.id),
              class: 'btn btn-primary' %>
            </td>
          <% end %>
          <% if donation.approved? %>
            <td>
              <%= link_to 'Confirmar doação',
              confirm_admin_donation_path(donation.id), method: :post, 
              class: 'btn btn-primary' %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if flash[:errors] %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <% if flash[:warnings] %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <% flash[:warnings].each do |warning| %>
        <p><%= warning %></p>
      <% end %>
    </div>
  <% end %>
  </div>