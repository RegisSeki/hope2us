<div id="confirmation-body" class="page">
  <h1>Olá, <%= current_user.name %></h1>

  <h2>Não se esqueça de nos enviar o comprovante de cada doação: </h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @donations.each_with_index do |donation, index| %>
      <tr>
        <th><%= index + 1 %></th>
        <td><%= donation.item.name %></td>
        <td>
          <% if donation.image? %>
        		<%= link_to 'Ver comprovante', receipt_donation_path(donation.id)%>
        	<% else %>
          	<%= link_to 'Enviar comprovante', edit_receipt_donation_path(donation.id) %>
            <%#= link_to 'Cancelar doação', donation, :method => :delete %>
        	<% end %>
        </td>
      <% end %>
      </tr>
    </tbody>
  </table>

  <% if flash[:errors] %>
    <div class="errors">
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <% if flash[:warnings] %>
    <div class="warnings">
      <% flash[:warnings].each do |warning| %>
        <p><%= warning %></p>
      <% end %>
    </div>
  <% end %>
</div>
