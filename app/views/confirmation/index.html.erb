<h1>Olá <%= current_user.name %></h1>
<p>Itens: </p>
<% @donations.each do |donation| %>
  <p><%= donation.item.name %></p>
  <% if donation.image? %>
		<%= link_to 'Ver comprovante', receipt_donation_path(donation.id)%>
	<% else %>
  	<%= link_to 'Enviar comprovante', edit_receipt_donation_donation_path(donation.id) %>
  	<%= link_to 'Cancelar doação', donation, :method => :delete %>
	<% end %>
<% end %>

<% if flash[:errors] %>
  <div class="errors">
    <% flash[:errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>
<% end %>

<% if flash[:warnings] %>
  <div class="warnings">
    <% flash[:warnings].each do |warning| %>
      <p><%= warning %></p>
    <% end %>
  </div>
<% end %>
