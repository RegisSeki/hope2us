<%= form_for donations_path do |f| %>
  <% @items.each do |item| %>
    <%= f.simple_fields_for :item do |items_form| %>
      <%= items_form.input :amount, collection: item.available_amounts, label: item.name %>
    <% end %>
    <%= f.simple_fields_for :user do |items_form| %>
      <%= items_form.input :name, label: 'Nome' %>
      <%= items_form.input :email, label: 'Email' %>
      <%= items_form.input :phone, label: 'Telefone' %>
     <% end %>
  <% end %>
  <%= f.submit 'Doar!' %>
<% end %>
