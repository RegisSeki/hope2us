<%= form_tag donations_path do %>
  <% @items.each do |item| %>
    <%= label_tag "items[#{item.id}]", item.name %>
    <%= select_tag "items[#{item.id}]", options_for_select(item.available_amounts), include_blank: true %>
  <% end %>

  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>

  <%= label_tag 'user[name]', 'Nome' %>
  <%= text_field_tag 'user[name]' %>

  <%= label_tag 'user[email]', 'Email' %>
  <%= text_field_tag 'user[email]' %>

  <%= label_tag 'user[phone]', 'Telefone' %>
  <%= text_field_tag 'user[phone]' %>

  <%= submit_tag 'Doar!' %>
<% end %>
