<div id="donation-form" class="page">
  <%= form_tag donations_path, class: 'form-horizontal' do %>
    <div class="form-container clearfix">
      <div class="items-container">
        <h2>Escolhas os items que deseja doar: </h2>
        <% @items.each do |item| %>
          <div class="form-group">
            <%= label_tag "items[#{item.id}]", item.name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= select_tag "items[#{item.id}]",
                  options_for_select(item.available_amounts), include_blank: true,
                  class: 'form-control' %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="user-container">
        <h2>Preencha os campos para contato: </h2>
        <div class="form-group">
          <%= label_tag 'user[name]', 'Nome', class: 'col-sm-2 control-label' %>

          <div class="col-sm-10">
            <%= text_field_tag 'user[name]', nil, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag 'user[email]', 'Email', class: 'col-sm-2 control-label' %>

          <div class="col-sm-10">
            <%= text_field_tag 'user[email]', nil, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag 'user[phone]', 'Telefone', class: 'col-sm-2 control-label' %>

          <div class="col-sm-10">
            <%= text_field_tag 'user[phone]', nil, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= submit_tag 'Doar!', class: 'btn btn-primary' %>
      <%= link_to 'Voltar', root_path, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
